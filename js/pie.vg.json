{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "columns": 2,
    "concat": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/hngu0098/fit3179w9/main/data/Airbnb%20(Nominal).csv"
            },
            "width": 150,
            "height": 150,
            "encoding": {
                "theta": {"field": "Host Value", "type": "quantitative", "title": "Number of host", "stack": true},
                "color": {
                    "field": "Host verified or unconfirmed", 
                    "type": "nominal", 
                    "legend": null,
                    "scale": {"range": ["#F29F05", "#5ABEFF", "#FFA85A", "#FF5A60", "#5400B4", "#00A5A0", "#FF5AED", "#FC642D", "#5A5FFF"]}
                }
            },
            "layer":[
                {
                    "mark": {
                        "type": "arc", 
                        "tooltip": true
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "radius": 40
                    },
                    "encoding": {
                        "text": {
                            "field": "Host verified or unconfirmed", 
                            "type": "nominal"
                        },
                        "color": {"value": "white"}
                    }
                }
            ]
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/hngu0098/fit3179w9/main/data/Airbnb%20(Nominal).csv"
            },
            "width": 150,
            "height": 150,
            "encoding": {
                "theta": {"field": "Instant value", "type": "quantitative", "title":"Number of Airbnb", "stack": true},
                "color": {
                    "field": "Instant or not instant book", 
                    "type": "nominal",
                    "scale": {"range": ["#FBF9CB", "#00A669"]}
                }
            },
            "layer":[
                {
                    "mark": {
                        "type": "arc", 
                        "tooltip": true
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "radius": 40
                    },
                    "encoding": {
                        "text": {
                            "field": "Instant or not instant book", 
                            "type": "nominal"
                        },
                        "color": {"value": "white"}
                    }
                }
            ]            
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/hngu0098/fit3179w9/main/data/Airbnb%20(Nominal).csv"
            },
            "width": 150,
            "height": 150,
            "mark": {"type": "arc", "tooltip": true},
            "encoding": {
                "theta": {"field": "Home value", "type": "quantitative", "title": "Number", "stack": true},
                "color": {"field": "Private room or entire home/apt", "type": "nominal"}
            },

            "layer":[
                {
                    "mark": {
                        "type": "arc", 
                        "tooltip": true
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "radius": 40,
                        "angle": -45
                    },
                    "encoding": {
                        "text": {
                            "field": "Private room or entire home/apt", 
                            "type": "nominal"
                        },
                        "color": {"value": "white"}
                    }
                }
            ]
        },

        {
            "data": {
                "url": "https://raw.githubusercontent.com/hngu0098/fit3179w9/main/data/Airbnb%20Policy.csv"
            },
            "width": 150,
            "height": 150,
            "mark": {"type": "arc", "tooltip": true},
            "encoding": {
                "theta": {"field": "Value", "type": "quantitative", "stack": true},
                "color": {"field": "Cancellation Policy", "type": "nominal"}
            },
            "layer":[
                {
                    "mark": {
                        "type": "arc", 
                        "tooltip": true
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "radius": 50
                    },
                    "encoding": {
                        "text": {
                            "field": "Cancellation Policy", 
                            "type": "nominal"
                        },
                        "color": {"value": "white"}
                    }
                }
            ]
        }
        
    ]
}


